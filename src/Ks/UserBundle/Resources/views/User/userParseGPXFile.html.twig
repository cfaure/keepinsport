{% extends "KsUserBundle::layout.html.twig" %}

{% block title %}
	{{ parent() }}
{% endblock %}
    
{% block content %}

<h1>{{ 'users.add_gpx_as_activity'|trans }} : </h1>

    <table class="table table-bordered table-striped" id="userList">
        <thead>
            <tr>
                <th>{{ 'users.name_file'|trans }}</th>
                <th>{{ 'users.size_file'|trans }}</th>
                <th>{{ 'users.action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
             <tr>
                <td>{{ nameFile }}</td>
                <td>{{ weightFile }} Ko</td>
                <td><a href="{{ path('ks_parse_gpx_to_add_activity', { 'nameFile': nameFile , 'weightFile': weightFile, 'codeSport': codeSport } ) }}">{{ 'users.add_gpx_to_activity'|trans }}</a></td>
            </tr>
        </tbody>
    </table>

{% endblock %}