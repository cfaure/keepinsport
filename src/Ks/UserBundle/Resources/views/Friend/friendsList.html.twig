{% extends "KsUserBundle::layout.html.twig" %}

{% block title %}
	{{ parent() }}
{% endblock %}
    
{% block content %}

    <table id="friendList" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>{{ 'users.username'|trans }}</th>
                <th>{{ 'users.email'|trans }}</th>
                <th>{{ 'users.last_login'|trans }}</th>
                {#<th>{{ 'users.actions'|trans }}</th>#}
            </tr>
        </thead>
        <tbody>
        {% for key, friend in friends %}
            <tr>
                <td>
                    <a href="{{ path('ks_user_public_profile', { 'username': friend.username }) }}" rel="tooltip" title="{{ friend.username }}">
                        {{ friend.username }}
                    </a>
                </td>
                <td>{{ friend.email }}</td>
                <td>{{ friend.lastLogin|date('d/m/Y H:i:s') }}</td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
