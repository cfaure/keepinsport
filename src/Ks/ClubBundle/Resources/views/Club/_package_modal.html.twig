<div id="package_modal" class='modal hide fade'>
    <div class='modal-header'>
        <a class='close' data-dismiss='modal'>&times;</a>
        <h3 class="clubs">Gestion des forfaits </h3>
    </div>
    
    <div class='modal-body'>
        <div class="errorsBloc"></div>
        <div class="messagesBloc"></div>
        <form method="post" enctype="multipart/form-data" novalidate="novalidate">
            <div class="row-fluid">
                <input type="text" value="" id="username">
            </div>
            <div class="row-fluid">
                <div class="media span7" style="margin : 0 0 10px 0">
                    {{ form_label(form.remainingSessions, "SÃ©ances restantes") }}
                    {{ form_widget(form.remainingSessions, { attr: { class:"remaingSessions input-block-level"} }) }}
                </div>
            </div>
            <input type="hidden" value="" name="clubId" id="clubId">
            <input type="hidden" value="" name="userId" id="userId">
            <input type="hidden" value="" name="sportId" id="sportId">
            {{ form_rest(form) }}
        </form>
    </div>
        
    <div class='modal-footer'>
        <img id="changeAvatarLoader" src="{{ asset('img/loader_ks_16.gif') }}" alt="loader" style="display:none">
        <a href='#' class='cancel btn' data-dismiss='modal'>{{ 'actions.cancel'|trans }}</a>
        <a id="saveButton" href='#' class='create btn btn-sportif'>{{ 'actions.save'|trans }}</a>
    </div>
</div>