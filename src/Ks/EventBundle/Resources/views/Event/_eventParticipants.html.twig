<center><h3 class="title">{{ 'article.participants'|trans }} ({{ participations|length }}) </h3></center>
<div class="participants">
    <br clear="all"/>
    <div class="row-fluid">
        {% if event.user_id is null %}
            <div class="col-md-12">          
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {% include 'KsEventBundle:Event:_userParticipatesEventLink.html.twig' with {'event': event, 'participations' : participations } %}
                {% endif %}
                <br clear="all"/>
            </div>
        {% endif %}
    </div>
</div>