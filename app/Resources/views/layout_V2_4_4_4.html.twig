<!DOCTYPE html>
<html xmlns:fb="http://www.facebook.com/2008/fbml">
	<head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>{% block title %}Keepinsport{% endblock %}</title>

            {% block stylesheets %}    
                <link rel="stylesheet" href="{{ asset('V2/css/style.css') }}">
                <link rel="stylesheet" href="{{ asset('V2/css/bootstrap.min.css') }}">
                <link rel="stylesheet" href="{{ asset('V2/skins/flat/blue.css') }}">
                
                <link rel="shortcut icon" type="image/x-icon" href="{{ asset('img/favicon.ico') }}" /> 
                <link rel="icon" type="image/png" href="{{ asset('img/keepinsport_logo_16.png') }}" />
                <link rel="apple-touch-icon" href="{{ asset('img/keepinsport_logo_57.png') }}" />
                <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('img/keepinsport_logo_72.png') }}" />
                <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('img/keepinsport_logo_114.png') }}" />
                
                <link rel="stylesheet" href='https://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
                <link rel="stylesheet" href='https://fonts.googleapis.com/css?family=Gloria+Hallelujah' rel='stylesheet' type='text/css'>
                
                <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.3/css/jquery.dataTables.min.css" />
                
                <link rel="stylesheet" href="{{asset('jQueryFileUpload/css/jquery.fileupload-ui.css')}}">
                
                {# datepicker jquery #}
                <link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
                
                {# timepicker bootstrap #}
                
                {# custom radio/checkbox button #}
                <link rel="stylesheet" type="text/css" href="{{ asset('iCheck/skins/square/blue.css') }}" type="text/css" />
                <link rel="stylesheet" type="text/css" href="{{ asset('iCheck/skins/square/yellow.css') }}" type="text/css" />
                <link rel="stylesheet" type="text/css" href="{{ asset('iCheck/skins/square/red.css') }}" type="text/css" />
                <link rel="stylesheet" type="text/css" href="{{ asset('iCheck/skins/minimal/grey.css') }}" type="text/css" />
                
                {# select custom #}
                <link rel="stylesheet" type="text/css" href="{{ asset('V2/css/select2.css') }}" type="text/css" />
                <link rel="stylesheet" type="text/css" href="{{ asset('V2/css/select2-bootstrap.css') }}" type="text/css" />
                <link rel="stylesheet" type="text/css" href="{{ asset('select2-3.4.5/select2.css') }}" type="text/css" />
                <link rel="stylesheet" type="text/css" href="{{ asset('select2-3.4.5/select2-bootstrap.css') }}" type="text/css" />
                
                {# slider #}
                <link rel="stylesheet" type="text/css" href="{{ asset('bootstrap-slider/css/slider.css') }}" />
            {% endblock %}

            {% block javascripts %}
                {# google #}
                <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>

                {# scripts agence web #}
                
                {# au départ jquery-1.11.1.min.js mais apparemment le jquery-ui-1.8.22.custom.min.js semble être utile pour les popover !
                    <script src="{{ asset('V2/js/jquery-1.11.1.min.js') }}"></script>
                #}
                <script type="text/javascript" src="{{ asset('js/jquery-1.8.2.min.js') }}"></script>
                <script type="text/javascript" src="{{ asset('js/ui/jquery-ui-1.8.22.custom.min.js') }}"></script>
                
                <script src="{{ asset('V2/js/bootstrap.min.js') }}"></script>
                <script src="{{ asset('V2/js/icheck.js') }}"></script>
                <script src="{{ asset('V2/js/app.js') }}"></script>
                
                {# routing js #}
                <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
                <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
                
                {# hightcharts #}
                <script type="text/javascript" src="{{ asset('V2/js/highcharts.js') }}"></script>
                <script type="text/javascript" src="{{ asset('V2/js/highcharts-more.js') }}"></script>
                <script type="text/javascript" src="{{ asset('V2/js/solid-gauge.src.js') }}"></script>
                <script type="text/javascript" src="{{ asset('V2/js/exporting.js') }}"></script>
                
                {# Animation scroll sur la page login#}
                <script src="{{ asset('V2/js/bind-polyfill.js') }}"></script>
                <script src="{{ asset('V2/js/smooth-scroll.js') }}"></script>
                
                {#Pour valider les formulaires #}
                <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>

                {# timepicker bootstrap #}
                <script type="text/javascript" src="{{ asset('bootstrap-timepicker/js/bootstrap-timepicker.min.js') }}"></script>
                <script type="text/javascript" src="{{ asset('mobiscroll-2.2/js/mobiscroll-2.2.custom.min.js') }}"></script>
                
                {# tables avancées #}
                <script type="text/javascript" src="//cdn.datatables.net/1.10.3/js/jquery.dataTables.min.js"></script>
                
                {# gestion des uploads de fichiers #}
                <script type="text/javascript" src="{{ asset('mixitup-1.5.3/jquery.mixitup.min.js') }}"></script>
                <script type="text/javascript" src="{{asset('jQueryFileUpload/js/tmpl.js')}}"></script>
                <script type="text/javascript" src="{{asset('jQueryFileUpload/js/jquery.iframe-transport.js')}}"></script>
                <script type="text/javascript" src="{{asset('jQueryFileUpload/js/jquery.fileupload.js')}}"></script>
                <script type="text/javascript" src="{{asset('jQueryFileUpload/js/jquery.fileupload-ui.js')}}"></script>
                <script type="text/javascript" src="{{asset('jQueryFileUpload/js/locale.js')}}"></script>
                
                {# gestion des popover #}
                <script type="text/javascript" src="{{ asset('V2/js/popover.js') }}"></script>
                
                {# select custom #}
                <script type="text/javascript" src="{{ asset('select2-3.4.5/select2.js') }}"></script>
                <script type="text/javascript" src="{{ asset('select2-3.4.5/select2_locale_fr.js') }}"></script>
                <script type="text/javascript" src="{{ asset('select2-3.4.5/select2.min.js') }}"></script>
                <script type="text/javascript" src="{{ asset('select2-3.4.5/functions.js') }}"></script>
                
                {# custom radio/checkbox button #}
                <script type="text/javascript" src="{{ asset('iCheck/jquery.icheck.min.js') }}"></script>
                
                {# slider de la page activité par exemple achievement #}
                <script src="{{ asset('bootstrap-slider/js/bootstrap-slider.js') }}"></script>
                
                {# diverses fonctions utilisées un peu partout...#}
                <script src="{{ asset('V2/js/misc.js') }}"></script>
                
                <script type="text/javascript">
                    $(document).ready(function() {
                        $('#modifPackWatch').click();
                        smoothScroll.init({
                            speed: 1000, // Integer. How fast to complete the scroll in milliseconds
                            easing: 'easeInOutCubic', // Easing pattern to use
                            offset: 0, // Integer. How far to offset the scrolling anchor location in pixels
                        });
                    });
                </script>
                
                <script type="text/javascript">
                    $(document).ready(function() {
                        $("[rel=tooltip]").tooltip();

                        if( $("#searchSelectTablet").size() > 0 || $("#searchSelectDesktop").size() > 0) {
                            var translations = {
                                "placeholder": "{{ "menu.search-placeholder"|trans }}",
                                "no-matches-found" : "{{ "menu.no-matches-found"|trans }}",
                                "searching" : "{{ "menu.searching"|trans }}",
                            };
                            initSelect2ForResearch( $("#searchSelectTablet"), translations );
                            initSelect2ForResearch( $("#searchSelectDesktop"), translations );
                        }
                    });
                </script>
            {% endblock %}
	</head>
        
        {% set page = app.session.get('page') %}
        
        <body id="body">
            {% include '::infoModal.html.twig' %}
            {% include '::confirmModal.html.twig' %}
            
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% include 'KsActivityBundle:Activity:_shareActivityModal.html.twig' %}
                {% render "KsActivityBundle:SportsmenSearch:form" %}
            {% endif %}
            
            {% include '::_header_auth_V2.html.twig' %}
                
            <div class="wrapper {% if page == 'newsFeed' %}feed{% endif %}">
                <div id="mainContainer" class="container" style="margin-top:70px;">
                    <div class="row-fluid">
                        <div class="span4 visible-desktop visible-tablet">
                            </br>
                            {% block left_column %}{% endblock %}         
                        </div>

                        <div class="span4">
                            </br>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                {% render "KsUserBundle:User:netAffiliation_728x90" %}
                            {% endif %}
                            
                            <div class="visible-phone">
                                {% if app.session.get('isExpertMode') == '1' %}
                                    <div class="thumbnail ksBloc">
                                        {% render 'KsActivityBundle:Activity:menu' %}
                                    </div>
                                {% endif %}
                            </div>
                            
                            <div class="thumbnail ksBloc">
                                {% if page == 'newsFeed' %}
                                    <h3 class="sportif">{{ 'menu.activities-from-my-community'|trans }}</h3>
                                    <div class="blocHeaderSeparator"></div>
                                {% endif %}
                                  
                                {% block center_column %}{% endblock %} 
                            </div>
                        </div>

                        <div class="span4 visible-desktop visible-tablet">
                            </br>
                            {% render "KsActivityBundle:Activity:rightColumn_new" %}
                        </div>
                    </div>
                </div>
            </div>
            
            {% include '::_google_analytics.html.twig' with { 'google_analytics' : google_analytics } %}
                
        {% block bottomscripts %}
        {% endblock %}
    </body>
    <div class="visible-desktop visible-tablet">
        {% include '::_footer.html.twig' %}
    </div>
</html>