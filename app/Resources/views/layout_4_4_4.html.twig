                        <div class="span4 visible-desktop visible-tablet">
                            </br>
                            {% block left_column %}{% endblock %}         
                        </div>

                        <div class="span4">
                            </br>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                {% render "KsUserBundle:User:netAffiliation_728x90" %}
                            {% endif %}
                            
                            <div class="visible-phone">
                                {% if app.session.get('isExpertMode') == '1' %}
                                    <div class="thumbnail ksBloc">
                                        {% render 'KsActivityBundle:Activity:menu' %}
                                    </div>
                                {% endif %}
                            </div>
                            
                            <div class="thumbnail ksBloc">
