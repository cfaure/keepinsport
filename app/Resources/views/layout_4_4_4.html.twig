                                    <h3 class="sportif">{{ 'menu.activities-from-my-community'|trans }}</h3>
                                    <div class="blocHeaderSeparator"></div>
                                {% endif %}
                                  
                                {% block center_column %}{% endblock %} 
                            </div>
                        </div>

                        <div class="span4 visible-desktop visible-tablet">
                            </br>
                            {% render "KsActivityBundle:Activity:rightColumn_new" %}
                        </div>
                    </div>
                </div>
