        {% set page = app.session.get('page') %}
        
        <body id="body" style="width:auto">
            {% include '::infoModal.html.twig' %}
            {% include '::confirmModal.html.twig' %}
            
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% include 'KsActivityBundle:Activity:_shareActivityModal.html.twig' %}
                {% render "KsActivityBundle:SportsmenSearch:form" %}
            {% endif %}
            
            {% if page == 'newsFeed' %}
                {% include '::_header.html.twig' %}
            {% elseif page == 'login' or page =='register' %}
                {% include '::_header_login.html.twig' %}
            {% endif %}
        
            <div class="wrapper {% if page == 'newsFeed' %}feed{% endif %}">
                <div id="mainContainer" class="container" style="margin-top:70px;">
